<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Título principal -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:elevation="4dp"
        android:padding="16dp"
        android:text="PIC Programmer - Editor de Fusibles"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Selector de Chip -->
    <androidx.cardview.widget.CardView
        android:id="@+id/chipSelectorCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:elevation="2dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar Chip PIC"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Spinner
                    android:id="@+id/chipSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />

                <Button
                    android:id="@+id/btnLoadChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargar"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

            <!-- Info del chip cargado -->
            <TextView
                android:id="@+id/chipInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:background="#E3F2FD"
                android:text="Selecciona un chip para comenzar"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textColor="#1976D2"
                android:visibility="visible" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Editor de fusibles -->
    <androidx.cardview.widget.CardView
        android:id="@+id/fuseEditorCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:elevation="2dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipSelectorCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header del editor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#E8EAF6"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Configuración de Fusibles"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#424242" />

                <Button
                    android:id="@+id/btnAddCustomFuse"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="+ Custom"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:minHeight="0dp"
                    android:backgroundTint="#9C27B0"
                    android:textColor="#FFFFFF"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

            <!-- ScrollView con fusibles dinámicos -->
            <ScrollView
                android:id="@+id/fuseScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/fuseContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/emptyFuseMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Carga un chip para ver los fusibles disponibles"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:padding="32dp"
                        android:visibility="visible" />

                </LinearLayout>

            </ScrollView>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD" />

            <!-- Área de log -->
            <ScrollView
                android:id="@+id/logScrollView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="8dp"
                android:background="#FAFAFA">

                <TextView
                    android:id="@+id/logTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Log de operaciones..."
                    android:textColor="#616161"
                    android:textSize="10sp"
                    android:lineSpacingExtra="2dp" />

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Barra de botones inferior -->
    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnProcess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="Procesar"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:enabled="false"
            style="@style/Widget.MaterialComponents.Button" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Restablecer"
            android:textSize="14sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:enabled="false"
            style="@style/Widget.MaterialComponents.Button" />

        <Button
            android:id="@+id/btnClearLog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Limpiar Log"
            android:textSize="14sp"
            android:backgroundTint="#9E9E9E"
            android:textColor="#FFFFFF"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
